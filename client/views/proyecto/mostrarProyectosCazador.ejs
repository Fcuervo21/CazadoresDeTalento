<%- include('../components/header') %>
    <header>
        <div class="full-logo">
            <img class="logo" src="../assets/logo.svg" />
            <h3 class="title">Cazadores de Talento</h3>
        </div>
        <nav>
            <ul class="nav__links">
                
            </ul>
        </nav>
        <a class="home" href="/"><button>Home</button></a>
    </header>

    <div class="title-instruction">
        <h1>Proyectos disponibles</h1>
    </div>

    <div class="container-card">
        <% for(let i = 0; i < proyectos.length; i++) { %>
            <div class="person-card">
                <h1>ID Proyecto: <%= proyectos[i].idProyecto %></h1>
                <h1><%= proyectos[i].nombre %></h1>
                <p><b>Descripcion:</b> <%= proyectos[i].descripcion %></p>
                <p><b>Habilidad Requerida:</b> <%= proyectos[i].habilidad %></p>
                <p><b>Cuotas:</b> $ <%= proyectos[i].cuotas %>.00</p>
                <p><b>Cazador:</b> <%= proyectos[i].alias %></p>
                <p><b>Giro del Proyecto:</b> <%= proyectos[i].giroDeProyecto %></p>
                <p><b>Reputacion Cazador:</b> <%= proyectos[i].promedioReputacion %>/5 ⭐️</p>
            </div>
        <% }%>
    </div>

    <div class="container-edit-delete">
        <div class="edit-container">
            <h1>Editar Proyecto</h1>
            <form action="/proyecto/updateProyecto" method="post" class="form-cita">
                <label for="">Ingresa ID del proyecto a modificar</label>
                <input type="text" name="idProyecto" id="idProyecto">
                <label for="">Ingresa nueva cuota</label>
                <input type="number" name="cuota" id="cuota" />
                <input class='submit-nice' type="submit" value="Update proyecto">
            </form>
        </div>

        <div class="edit-container">
            <h1>Eliminar Proyecto</h1>
            <form action="/proyecto/deleteProyecto" method="post" class="form-cita">
                <label for="">Ingresa ID del proyecto a eliminar</label>
                <input type="text" name="idProyecto" id="idProyecto">
                <input class='submit-nice' type="submit" value="Eliminar cita">
            </form>
        </div>
    </div>
    

<%- include('../components/footer') %>